<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dapp_ui_02"
        android:alpha="0.79" />
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/user_profile_1"
            android:padding="14dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/user_avatar_3"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userTitle"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userValue"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""/>

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="200dp"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="START CONNECTION"
            android:onClick="startConnection"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <Button
            android:id="@+id/btnSignPersonal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="200dp"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="SIGN PERSONAL DATA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <Button
            android:id="@+id/btnSignType"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="200dp"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="SIGN TYPED DATA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp"
            android:onClick="showSignTypedDataDialog"
            />

        <Button
            android:id="@+id/btnTransaction"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="200dp"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="START TRANSACTION"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />


    </LinearLayout>

</FrameLayout>
